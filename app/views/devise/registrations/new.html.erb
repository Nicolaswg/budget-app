<div class="page flex-col">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
	<nav class="navbar flex-row">
		<%= link_to unauthenticated_root_path, type: 'button' do %>
			<%= image_tag('arrow-icon.png', :size => "25x25", :class => 'menu')%>
		<%end%>
		<h3>SIGN UP</h3>
			<%= image_tag('search-icon.png', :size => "25x25", :class => 'search')%>
	</nav>
	<div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "name", class: "log-input" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "email", class: "log-input" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, placeholder: "minimum of 6 digits", class: "log-input" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "confirm password", class: "log-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
